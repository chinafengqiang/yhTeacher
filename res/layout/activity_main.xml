<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_marginTop="55dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android1:id="@+id/imageView1"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android1:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android1:id="@+id/imageView1"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="260dp"
                android1:src="@drawable/maintitle" />
            
            <Button
            android:id="@+id/btnMe"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:background="@drawable/bottom_me_selector"
            android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="267dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <Button
            android1:id="@+id/btnTeachingMaker"
            android1:layout_width="match_parent"
            android1:layout_height="268dp"
            android1:layout_weight="1"
            android1:background="@drawable/bottom_teachingmanage_selector"
            android1:enabled="true"
            android1:textColor="#FFFFFF"
            android1:textSize="20dp" />

        <Button
            android:id="@+id/btnLearningFile"
            android:layout_width="match_parent"
            android:layout_height="268dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/bottom_classresources_selector"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android1:enabled="true" />

         <Button
             android:id="@+id/btnStudentManager"
             android:layout_width="match_parent"
             android:layout_height="268dp"
             android:layout_gravity="left"
             android:layout_marginTop="10dp"
             android:layout_weight="0.7"
             android:background="@drawable/bottom_studentmanager_selector"
             android:textColor="#FFFFFF"
             android:textSize="20dp"
             android1:enabled="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" >

       <Button
           android1:id="@+id/btnTeachingFile"
           android1:layout_width="match_parent"
           android1:layout_height="268dp"
           android1:layout_weight="1"
           android1:background="@drawable/bottom_file_selector"
           android1:enabled="true"
           android1:textColor="#FFFFFF"
           android1:textSize="20dp" />

        <Button
            android:id="@+id/btnHomework"
            android:layout_width="match_parent"
            android:layout_height="268dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/bottom_homework_selector"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            android1:enabled="true" />

         <Button
             android:id="@+id/btnMoreApp"
             android:layout_width="match_parent"
             android:layout_height="268dp"
             android:layout_gravity="left"
             android:layout_marginTop="10dp"
             android:layout_weight="0.7"
             android:background="@drawable/bottom_more_selector"
             android:textColor="#FFFFFF"
             android:textSize="20dp"
             android1:enabled="true" />

    </LinearLayout>

</LinearLayout>